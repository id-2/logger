{
  "name": "@smol-ai/logger",
  "version": "0.0.19",
  "description": "",
  "keywords": [],
  "main": "dist/smol-logger.umd.js",
  "module": "dist/smol-logger.es5.js",
  "typings": "dist/types/smol-logger.d.ts",
  "files": [
    "dist"
  ],
  "author": "swyxio <dont@email.me>",
  "repository": {
    "type": "git",
    "url": ""
  },
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "bin": {
    "log2tsv": "dist/cli.js"
  },
  "scripts": {
    "lint": "tslint  --project tsconfig.json -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "prebuild": "rimraf dist",
    "build": "npm run build-cli && npm run build-lib",
    "build-lib": "tsc --module commonjs && rollup -c rollup.config.ts --bundleConfigAsCjs",
    "build-cli": "tsc src/cli.ts --outDir dist",
    "start": "rollup -c rollup.config.ts -w",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "test:prod": "npm run lint && npm run test -- --no-cache",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "semantic-release-prepare": "ts-node tools/semantic-release-prepare",
    "precommit": "lint-staged",
    "travis-deploy-once": "travis-deploy-once",
    "deploy-docs": "ts-node tools/gh-pages-publish",
    "oldbuild": "tsc --module commonjs && rollup -c rollup.config.ts && typedoc src/smol-logger.ts"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverageFrom": [
      "src/*.{js,ts}"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "colors": "^1.4.0",
    "commitizen": "^4.3.0",
    "coveralls": "^3.1.1",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-config": "^29.5.0",
    "lint-staged": "^13.2.2",
    "lodash.camelcase": "^4.3.0",
    "prettier": "^2.8.8",
    "prompt": "^1.3.0",
    "replace-in-file": "^7.0.1",
    "rimraf": "^5.0.1",
    "rollup": "^3.25.1",
    "rollup-plugin-commonjs": "^9.1.8",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-typescript2": "^0.34.1",
    "semantic-release": "^21.0.5",
    "shelljs": "^0.8.5",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tslib": "^2.5.3",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^5.1.3"
  },
  "dependencies": {}
}
